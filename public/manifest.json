{
  "manifest_version": 3,
  "name": "Voice Assistant Helper",
  "version": "1.0",
  "description": "A Chrome extension using voice synthesis and recording to assist blind or mute users with AI-powered interaction.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "cookies", "scripting", "activeTab"],
  "host_permissions": [
    "<all_urls>" // or restrict to your server domain
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "content/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
